<% layout("./boilerplate.ejs") %>

<link rel="stylesheet" href="./style/projects.css">

<section id="project">
    <div class="projects container">
        <div class="card NikeClone">
            <div class="inside-card">
                <div class="image">
                    <img src="../images/nike.png" alt="">
                </div>
                <div class="items">
                    <div class="description">
                        <h1>Nike e-commerce Clone</h1>
                        <p>
                            This project is a ReactJS-based clone of the Nike e-commerce website. It aims to replicate the core functionality 
                            and design of the original site, providing users with a familiar shopping experience.
                        </p>
                    </div>
                    <div class="buttons">
                        <a target="_blank" href="https://github.com/SMThapa/Nike_Clone">GitHub</a>
                        <a target="_blank" href=" https://nike-ecommerce-clone.netlify.app/">Demo</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card teslaClone">
            <div class="inside-card">
                <div class="image">
                    <img src="../images/clone.png" alt="">
                </div>
                <div class="items">
                    <div class="description">
                        <h1>Tesla Clone</h1>
                        <p>A Tesla webiste clone. It is a static webpage that mimics the design and functionality of the original Tesla landing page.</p>
                    </div>
                    <div class="buttons">
                        <a target="_blank" href="https://github.com/SMThapa/JDM">GitHub</a>
                        <a target="_blank" href="https://jdm.onrender.com/">Demo</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card todoList">
            <div class="inside-card">
                <div class="inside-card">
                    <div class="image">
                        <img src="../images/todolist.png" alt="">
                    </div>
                    <div class="items">
                        <div class="description">
                            <h1>To-Do-List</h1>
                            <p>My first ever react project the "to do list". It's a simple app where you can create, edit and delete tasks. It stores the data in localstorage.</p>
                        </div>
                        <div class="buttons">
                            <a target="_blank" href="https://github.com/SMThapa/React-TO-DO-LIST-app">GitHub</a>
                            <a target="_blank" href="https://to-do-list-ck7n.onrender.com/">Demo</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card movie-api">
            <div class="inside-card">
                <div class="inside-card">
                    <div class="image">
                        <img src="../images/movie-api.png" alt="">
                    </div>
                    <div class="items">
                        <div class="description">
                            <h1>Movie List Website</h1>
                            <p>A simple movie website. Movie api from TMDB is used to fetch data. This website is built on React JS and tailwind css.</p>
                        </div>
                        <div class="buttons">
                            <a target="_blank" href="https://github.com/SMThapa/movie_api">GitHub</a>
                            <a target="_blank" href="https://mml.onrender.com">Demo</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

